@model IEnumerable<Biblioteca_ASP.NET_EF.Models.Livro>

@{
    ViewBag.Title = "Index";
}

<h2>Biblioteca</h2>

<p>
    @Html.ActionLink("Adicionar nova entrada", "Create", null, new {@class = "btn btn-info"})
</p>

<table class="table table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr >
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }, new {@class = "btn btn-primary"})
            @Html.ActionLink("Detalhes", "Details", new { id=item.id }, new {@class = "btn btn-warning"})
            @Html.ActionLink("Apagar", "Delete", new { id=item.id }, new {@class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
